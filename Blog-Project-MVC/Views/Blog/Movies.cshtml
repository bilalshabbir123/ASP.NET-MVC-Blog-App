@model IEnumerable<Blog_Project_MVC.Blog>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies Articles</h2>
<hr />

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<table class="table">


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b style="color:brown;font-size:large;"> @Html.DisplayFor(modelItem => item.Btitle)</b>
                <p>@Html.DisplayFor(modelItem => item.Bdec)</p>

            </td>
        </tr>
        <tr>
            <td>
                <a href="~/Blog/@item.Burl">Read Complete Article</a>
            </td>
        </tr>
        <tr>
            <td>
                Category <a href="~/Blog/@item.Bcatagory">@Html.DisplayFor(modelItem => item.Bcatagory)</a>

            </td>


        </tr>
    }

</table>
